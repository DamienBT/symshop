{% extends "base.html.twig" %}

{% block title %}Mes commandes
{% endblock %}

{% block body %}

	<h1>Mes commandes</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Numéro</th>
				<th>Adresse de livraison</th>
				<th>date de commande</th>
				<th>produit de la commande</th>
				<th>total</th>
			</tr>
		</thead>
		<tbody>
			{% for p in purchases %}
				<tr>
					<td>{{p.id}}</td>
					<td>{{p.address}}
						{{p.postalCode}}
						{{p.city}}</td>
					<td>{{p.purchasedAt | date('d/m/Y H:m') }}</td>
					<td>
						<ul>
							{% for item in p.purchaseItems %}
								<li>{{item.quantity}}
									x
									{{item.productName }}
									({{item.total / 100 }}€)</li>
							{% endfor %}
						</ul>
					</td>
					<td>{{p.total / 100}}€</td>
				</tr>

			{% endfor %}
		</tbody>
	</table>
{% endblock %}
